{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <section class="container">
        <div class="row">
            <div class="col">
                <h1>Inscription</h1>

                {{ form_start(registrationForm) }}
                <fieldset class="mb-3">
                    <legend>Mon identité</legend>
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.structureName) }}

                </fieldset>

                <fieldset class="mb-3">
                    <legend>Mes coordonnées</legend>
                    {{ form_row(registrationForm.address) }}
                    {{ form_row(registrationForm.zipcode) }}
                    {{ form_row(registrationForm.city) }}

                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.RGPDconsent) }}
                </fieldset>


                <button type="submit" class="my-3 btn btn-primary btn-lg">Inscrire</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>

{% endblock %}
