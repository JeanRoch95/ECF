{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/partenaire.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
{% endblock %}

{% block title %}Hello PartenaireController!{% endblock %}

{% block body %}

    <div class="container">
        <div class="main-body">

            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>{{ structures.structureName }}</h4>
                                    <p class="text-muted font-size-sm">{{ structures.address }} - {{ structures.city }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-3">
                        <ul class="list-group list-group-flush">
                            {% if app.user %}
                                {% if 'ROLE_ADMIN' in app.user.roles %}
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Active</h6>
                                <a href="{{ path('permuted_structure', {id: structures.id}) }}" role="button">
                                    <label class="label">
                                        <div class="form-check form-switch">
                                            {% if structures.status == true %}
                                                <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled" checked>
                                                <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>
                                            {% else %}
                                                <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled">
                                                <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>                                            {% endif %}
                                            <div class="indicator"></div>
                                        </div>
                                </a>
                            </li>
                                    {% endif %}
                                {% if 'ROLE_PARTENAIRE' in app.user.roles %}
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Active</h6>
                                    <label class="label">
                                        <div class="form-check form-switch">
                                            {% if structures.status == true %}
                                                <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled" disabled>
                                                <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>
                                            {% else %}
                                                <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled" disabled>
                                                <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>                                            {% endif %}
                                            <div class="indicator"></div>
                                        </div>
                            </li>
                                    {% endif %}
                                {% if 'ROLE_STRUCTURE' in app.user.roles %}
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Active</h6>
                                    <label class="label">
                                        <div class="form-check form-switch">
                                            {% if structures.status == true %}
                                                <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled" disabled>
                                                <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>
                                            {% else %}
                                                <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled" disabled>
                                                <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>                                            {% endif %}
                                            <div class="indicator"></div>
                                        </div>

                            </li>
                                    {% endif %}
                            {% endif %}
                            {% if app.user %}
                                {% if 'ROLE_STRUCTURE' in app.user.roles %}
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0" style="padding-right: 60%">Changer mot de passe</h6>
                                        <div class="col-sm-12">
                                            <a class="btn btn-info" href="{{ path('structure.edit.password', {id: structures.id}) }}">Editer</a>
                                        </div>
                                    </li>
                                    {% endif %}
                            {% endif %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <h6 class="mb-0" style="padding-right: 60%">Editer structure</h6>
                                <div class="col-sm-12">
                                    <a class="btn btn-info" href="{{ path('structure.edit', {id: structures.id}) }}">Editer</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Nom de la strucutre</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ structures.structureName }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ structures.email }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Téléphone</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ structures.phone }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Address</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ structures.address }} - {{ structures.zipcode }} - {{ structures.city }}
                                </div>
                            </div>
                            <hr>
                        </div>
                    </div>



                        <div class="col-sm-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="d-flex align-items-center mb-3">Permission</h6>
                                    <div class="d-flex align-items-center justify-content-between">
                                        <small class="">Perm</small>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled">
                                            <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>
                                        </div>
                                    </div>
                                    <div class=" mb-3" style="height: 5px">
                                        <div class="bg-primary" style="width: 80%"></div>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between">
                                        <small class="">Web Design</small>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled">
                                            <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>
                                        </div>
                                    </div>
                                    <div class=" mb-3" style="height: 5px">
                                        <div class="bg-primary" ></div>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between">
                                        <small class="">Web Design</small>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled">
                                            <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>
                                        </div>
                                    </div>
                                    <div class="mb-3" style="height: 5px">
                                        <div class="bg-primary"></div>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between">
                                        <small class="">Web Design</small>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled">
                                            <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>
                                        </div>
                                    </div>
                                    <div class="mb-3" style="height: 5px">
                                        <div class="bg-primary"></div>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between">
                                        <small class="">Web Design</small>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled" checked disabled>
                                            <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>
                                        </div>
                                    </div>
                                    <div class="mb-3" style="height: 5px">
                                        <div class="bg-primary" ></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}
