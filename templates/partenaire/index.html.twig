{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/partenaire.css') }}">
<link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
{% endblock %}

{% block title %}Hello PartenaireController!{% endblock %}

{% block body %}

    <div class="container">
        <div class="main-body">

            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="main-breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href='#'>Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Partenaire</li>
                </ol>
            </nav>
            <!-- /Breadcrumb -->

            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>{{ partenaire.email }}</h4>
                                    <p class="text-muted font-size-sm">{{ partenaire.address }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-3">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">Active</h6>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled" checked disabled>
                                    <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>
                                </div>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <h6 class="mb-0" style="padding-right: 60%">Nouvelle structure</h6>
                                <div class="col-sm-12">
                                    <a class="btn btn-info" href="#">Ajouter</a>
                                </div>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <h6 class="mb-0" style="padding-right: 60%">Editer partenaire</h6>
                                <div class="col-sm-12">
                                    <a class="btn btn-info" href="#">Editer</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Nom du partenaire</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ partenaire.email }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ partenaire.email }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Téléphone</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ partenaire.email }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Address</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ partenaire.address }}
                                </div>
                            </div>
                            <hr>
                        </div>
                    </div>


                    <div class="row gutters-sm">
                        <div class="col-sm-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="d-flex align-items-center mb-3">Structures du partenaire</h6>
                                        <h6>Active</h6>
                                    </div>
                                    {% for structure in structures %}
                                    <div class="d-flex align-items-center justify-content-between">
                                        <small class="">{{ structure.structureName }}</small>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled">
                                            <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>
                                        </div>
                                    </div>
                                    <div class="mb-3" style="height: 5px">
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="d-flex align-items-center mb-3">Permission globales</h6>
                                    <div class="d-flex align-items-center justify-content-between">
                                        <small class="">Perm</small>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled">
                                            <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>
                                        </div>
                                    </div>
                                    <div class=" mb-3" style="height: 5px">
                                        <div class="bg-primary" style="width: 80%"></div>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between">
                                        <small class="">Web Design</small>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled">
                                            <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>
                                        </div>
                                    </div>
                                    <div class=" mb-3" style="height: 5px">
                                        <div class="bg-primary" ></div>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between">
                                        <small class="">Web Design</small>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled">
                                            <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>
                                        </div>
                                    </div>
                                    <div class="mb-3" style="height: 5px">
                                        <div class="bg-primary"></div>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between">
                                        <small class="">Web Design</small>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled">
                                            <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>
                                        </div>
                                    </div>
                                    <div class="mb-3" style="height: 5px">
                                        <div class="bg-primary"></div>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between">
                                        <small class="">Web Design</small>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled" checked disabled>
                                            <label class="form-check-label" for="flexSwitchCheckCheckedDisabled"></label>
                                        </div>
                                    </div>
                                    <div class="mb-3" style="height: 5px">
                                        <div class="bg-primary" ></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}
