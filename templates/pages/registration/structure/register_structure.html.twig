{% extends 'base.html.twig' %}


 {% block stylesheets %}
     <link rel="stylesheet" href="{{ asset('assets/css/form.css') }}">
 {% endblock %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% include '_partials/_nav.html.twig' %}

    <section class="container">
        <div class="row">
            <div class="col">
                <h1>Inscription</h1>

                {{ form_start(registrationForm) }}
                <fieldset class="mb-3">
                    <legend>Mon identité</legend>
                {{ form_row(registrationForm.structureName) }}
                {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                {{ form_row(registrationForm.phone) }}

                </fieldset>

                <fieldset class="mb-3">
                    <legend>Mes coordonnées</legend>
                    {{ form_row(registrationForm.address) }}
                    {{ form_row(registrationForm.zipcode) }}
                    {{ form_row(registrationForm.city) }}
                    {{ form_row(registrationForm.description) }}


                    {{ form_row(registrationForm.userPartenaire) }}
                </fieldset>


                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>

{% endblock %}
